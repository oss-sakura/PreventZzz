<Window x:Class="PreventZzz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PreventZzz"
        mc:Ignorable="d"
        Title="About Prevent Zzz" Height="180" Width="250"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Prevent Zzz" FontWeight="Bold" FontSize="20" HorizontalContentAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" >
            <TextBlock >
                <Hyperlink x:Name="hyperlink" NavigateUri="https://sakura-it.com/">https://sakura-it.com/</Hyperlink>
            </TextBlock>
        </StackPanel>
        <Label Grid.Row="2" Content="(c)  2021- IT SUPPORT SAKURA inc." HorizontalContentAlignment="Center"/>
    </Grid>
</Window>
